		<%= form_for(:data, url: optimise_path, remote: true) do |f| %>
   <%= f.label :累計レリック %>
   <%= f.text_field :relic, class: 'form-control', id: "relic",  placeholder: "例: 7.18e72 または 7.18at ", value: cookies[:relic] %>
   <br>
   <%= f.label :"影率(%) または 影に振ったレリック数" %>
   <%= f.text_field :bos, class: 'form-control', id: "bos", placeholder: "例: 0.50（50%の場合） ", value: cookies[:bos] %>
   <br>
   <%= f.label :"所持アーティファクト数（サルべージは含まず）" %>
   <%= f.text_field :"afc", class: 'form-control', id: "afc", value: cookies[:afc] %>
   
   <br>
   
   <%= f.label :ビルド： %>
   <%= f.text_field :build, class: 'form-control', id: "build", placeholder:"SC PET CS HS いずれかを入力(大文字)", value: cookies[:build] %>
    

   <br>
   <%= f.label :ゴールド： %>
   <%= f.text_field :gold, class: 'form-control', id: "gold", placeholder:"フェアリー pHoM チェスターソン いずれかを入力", value: cookies[:gold] %>

   
   <br>
   <%= f.label :ヒーローの属性①： %>
   <%= f.text_field :hero1, class: 'form-control', id: "hero1", placeholder:"地面 飛行 いずれかを入力", value: cookies[:hero1] %>

   
   <br>
   <%= f.label :ヒーローの属性②： %>
   <%= f.text_field :hero2, class: 'form-control', id: "hero2", placeholder:"近接 遠隔 魔術 いずれかを入力", value: cookies[:hero2] %>

   
   <br>
   <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#demo">未所持AF選択 ▼</button>
   <div id="demo" class="collapse">
    <br>
    持っていないAFにチェックをいれてください（画像クリックでも反応します）<br>
   <% (0..57).each do |i| %>
   <br>
   <%= f.label :"af#{i}" do %>
   <%= f.check_box :"af#{i}" , id: "afhave#{i}", checked: ischeck(cookies[:"af#{i}"]) %> <%= image_tag("#{image_name(i)}.png", width:"40px") %>
   <% end %> 
   <% end %> 
   </div>
   
   <br><br>
   <%= f.check_box :letter , id: "letter", checked: ischeck(cookies[:letter]) %> letter表記(aa,ab,ac,...)で結果を表示する
   <br><br>
   <%= f.check_box :AD , id: "AD", checked: ischeck(cookies[:AD]) %>AD(アーティファクトダメージ)を考慮する
   <br><br>
   <%= f.submit "保存",  class: "btn btn-success" %>
   <input type="button" id= "optimise", class="btn btn-primary" value="計算">
   
  <% end %>
  
