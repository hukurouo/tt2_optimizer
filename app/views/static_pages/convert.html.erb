<button class="copy_code">クリップボードにコピー</button>

<script>
$('.copy_code').onclick(function() {
        var clipboard = $('<textarea></textarea>');
        clipboard.addClass('clipboard');
        clipboard.html( "abc\naa" );
        $(this).append(clipboard);
        clipboard.select();
        document.execCommand('copy');
        clipboard.remove();
    });
</script>

